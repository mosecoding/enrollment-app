generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id          String       @id @default(uuid())
  firstName   String
  lastName    String
  dni         String       @unique
  address     String
  phoneNumber String?
  age         Int
  gender      Gender
  birthDate   DateTime
  username    String       @unique
  password    String
  guardian    Guardian     @relation(fields: [guardianId], references: [id])
  guardianId  String
  enrollments Enrollment[]

  @@map("student")
}

model Guardian {
  id          String    @id @default(uuid())
  firstName   String
  lastName    String
  phoneNumber String
  students    Student[]

  @@map("guardian")
}

model Enrollment {
  id             String           @id @default(uuid())
  enrollmentDate DateTime         @default(now())
  status         EnrollmentStatus @default(PENDING)
  student        Student          @relation(fields: [studentId], references: [id])
  studentId      String
  section        Section          @relation(fields: [sectionId], references: [id])
  sectionId      Int
  payments       Payment[]

  @@map("enrollment")
}

model Payment {
  id           String        @id @default(uuid())
  amount       Float
  paymentDate  DateTime      @default(now())
  status       PaymentStatus @default(PENDING)
  paymentCode  String        @unique
  enrollment   Enrollment    @relation(fields: [enrollmentId], references: [id])
  enrollmentId String

  @@map("payment")
}

model Level {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  grades Grade[]

  @@map("level")
}

model Grade {
  id       Int       @id @default(autoincrement())
  name     String
  level    Level     @relation(fields: [levelId], references: [id])
  levelId  Int
  sections Section[]

  @@map("grade")
}

model Section {
  id          Int          @id @default(autoincrement())
  name        String
  grade       Grade        @relation(fields: [gradeId], references: [id])
  gradeId     Int
  vacancies   Int          @default(5)
  enrollments Enrollment[]

  @@map("section")
}

enum Gender {
  MALE
  FEMALE
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  CANCELLED
}

enum EnrollmentStatus {
  PENDING
  COMPLETED
  CANCELLED
  INVALID
}
